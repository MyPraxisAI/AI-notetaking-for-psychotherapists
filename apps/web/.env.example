# =============================================================================
# AI Notes for Psychotherapists - Web Application Environment Variables
# =============================================================================
# Copy this file to .env.local and fill in your values
# cp .env.example .env.local

# =============================================================================
# SITE CONFIGURATION
# =============================================================================

NEXT_PUBLIC_SITE_URL=http://localhost:3000
NEXT_PUBLIC_PRODUCT_NAME="AI Notes"
NEXT_PUBLIC_SITE_TITLE="AI Notes for Psychotherapists"
NEXT_PUBLIC_SITE_DESCRIPTION="Record therapy sessions, automatically transcribe them, and generate AI-powered insights."
NEXT_PUBLIC_DEFAULT_THEME_MODE=light
NEXT_PUBLIC_THEME_COLOR="#ffffff"
NEXT_PUBLIC_THEME_COLOR_DARK="#0a0a0a"
NEXT_PUBLIC_DEFAULT_LOCALE=en

# =============================================================================
# SUPABASE
# =============================================================================
# Get these from your Supabase project settings
# For local development, use the default values from `supabase start`

NEXT_PUBLIC_SUPABASE_URL=http://127.0.0.1:54321
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key
SUPABASE_DB_WEBHOOK_SECRET=your-webhook-secret

# =============================================================================
# AI PROVIDERS
# =============================================================================
# At least one AI provider is required for generating artifacts

# OpenAI - https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-...

# Google AI - https://aistudio.google.com/app/apikey
GOOGLE_API_KEY=

# =============================================================================
# AWS CONFIGURATION
# =============================================================================
# Required for background tasks queue and file storage

AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=

# SQS Queue URL for background tasks
# For local development with LocalStack: http://localhost:4566/000000000000/your-queue-name
BACKGROUND_TASKS_QUEUE_URL=

# =============================================================================
# AUTHENTICATION
# =============================================================================

NEXT_PUBLIC_AUTH_PASSWORD=true
NEXT_PUBLIC_AUTH_MAGIC_LINK=false

# =============================================================================
# BILLING (Optional)
# =============================================================================

NEXT_PUBLIC_BILLING_PROVIDER=stripe
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=

# =============================================================================
# EMAIL (Optional)
# =============================================================================

EMAIL_SENDER=noreply@yourdomain.com
EMAIL_HOST=smtp.yourdomain.com
EMAIL_PORT=587
EMAIL_TLS=true
EMAIL_USER=
EMAIL_PASSWORD=
MAILER_PROVIDER=nodemailer

# =============================================================================
# FEATURE FLAGS
# =============================================================================

NEXT_PUBLIC_ENABLE_THEME_TOGGLE=true
NEXT_PUBLIC_ENABLE_PERSONAL_ACCOUNT_DELETION=false
NEXT_PUBLIC_ENABLE_PERSONAL_ACCOUNT_BILLING=true
NEXT_PUBLIC_ENABLE_TEAM_ACCOUNTS=false
NEXT_PUBLIC_ENABLE_NOTIFICATIONS=true
NEXT_PUBLIC_REALTIME_NOTIFICATIONS=false
NEXT_PUBLIC_ENABLE_VERSION_UPDATER=true
NEXT_PUBLIC_ENABLE_INVITATION_ONLY_SIGNUP=false

# =============================================================================
# BASIC AUTH (Optional)
# =============================================================================
# Enable HTTP Basic Auth for staging/preview environments

ENABLE_BASIC_AUTH=false
BASIC_AUTH_USERNAME=
BASIC_AUTH_PASSWORD=

# =============================================================================
# ANALYTICS (Optional)
# =============================================================================

# Google Analytics
NEXT_PUBLIC_GA_MEASUREMENT_ID=
NEXT_PUBLIC_GA_DISABLE_PAGE_VIEWS_TRACKING=true
NEXT_PUBLIC_GA_DISABLE_LOCALHOST_TRACKING=true

# PostHog
NEXT_PUBLIC_POSTHOG_KEY=
NEXT_PUBLIC_POSTHOG_HOST=https://us.posthog.com

# =============================================================================
# MONITORING (Optional)
# =============================================================================

SENTRY_DSN=
SENTRY_DISABLED=true
