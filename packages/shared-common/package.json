{
  "name": "@kit/shared-common",
  "private": true,
  "version": "0.1.0",
  "scripts": {
    "clean": "git clean -xdf .turbo node_modules",
    "build": "tsc",
    "dev": "tsc --watch",
    "format": "prettier --check \"**/*.{ts,tsx}\"",
    "lint": "eslint .",
    "typecheck": "tsc --noEmit"
  },
  "prettier": {},
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./logger": {
      "import": "./dist/logger/index.js",
      "require": "./dist/logger/index.js",
      "types": "./dist/logger/index.d.ts"
    },
    "./sentry": {
      "import": "./dist/sentry/index.js",
      "require": "./dist/sentry/index.js",
      "types": "./dist/sentry/index.d.ts"
    },
    "./registry": {
      "import": "./dist/registry/index.js",
      "require": "./dist/registry/index.js",
      "types": "./dist/registry/index.d.ts"
    }
  },
  "dependencies": {
    "@sentry/nextjs": "^9.3.0",
    "@sentry/node": "^7.120.3",
    "pino": "^9.6.0"
  },
  "devDependencies": {
    "@kit/eslint-config": "workspace:*",
    "@sentry/types": "^7.107.0",
    "@types/node": "^22.13.4",
    "typescript": "^5.8.2"
  },
  "typesVersions": {
    "*": {
      "*": [
        "src/*"
      ]
    }
  }
}
